<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="800.0" stylesheets="@Emo.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordsearch.GameController">
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <GridPane fx:id="wordGrid" gridLinesVisible="true" hgap="80.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
            <Region prefHeight="100.0" prefWidth="249.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="solveButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goToMenu" prefHeight="57.0" prefWidth="100.0" styleClass="menu-button" text="Solve" />
            <Button fx:id="menuButton1" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goToMenu" prefHeight="57.0" prefWidth="100.0" styleClass="menu-button" text="Menu" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <GridPane fx:id="gridPane" alignment="CENTER" BorderPane.alignment="CENTER">

      </GridPane>
   </center>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>